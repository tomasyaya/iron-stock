<div class="container">
    <div class="row">
        {{#each companies}}
            <div class="card text-center m-5 w-100" id="actionsCard">
                <canvas id="my-chart-{{symbolName}}"></canvas>
                <div class="card-body">
                    <span class="card-title"><a href="/chart/{{_id}}">{{name}}</a></span>
                    <span class="symbolName">{{symbolName}}</span>
                    <a href="/delete/{{_id}}" class="btn btn-danger text-white mx-3">Delete</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>

<form class="form-group" action="/findOptions" method="post">
  <h4>If you need help to look for a company, introduce anything here</h4>

  <label for="">Symbol name:</label>
  <input class="form-control" type="text" name="symbolName" placeholder="Introduce here...">

  <button id="botonSearch" class="btn btn-primary mt-3" type="submit">SEARCH</button>
</form>